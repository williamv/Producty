<title> Product Listing </title>

  <h1>Your Products</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Overview</th>
      <th></th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.overview %></td>
      <td><%= link_to 'View', product %></td>
    </tr>
  <% end %>
  </table>

  <br />
<%= button_to 'Add a New Product', {:controller => "products", :action => "new"}, :method => :get %>