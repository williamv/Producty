<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
<head>
  <title> Product Listing </title>
  <link rel="stylesheet href="/assets/stylesheets/products.css">
</head>
<body>
  <h1>Your Products</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Overview</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.overview %></td>
      <td><%= link_to 'View', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= button_to 'Delete', product, confirm: 'Are you sure you want to delete?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />
<%= button_to 'Add a New Product', {:controller => "products", :action => "new"}, :method => :get %>

  </body>
</html>